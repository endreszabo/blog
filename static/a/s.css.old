	&::after {
		clear: both;
		display: block;
	}
*/ }
  .post-content .post-title, .post-content-with-image .post-title {
    margin-bottom: 0px; }
    .post-content .post-title a, .post-content-with-image .post-title a {
      border-bottom: none; }
      .post-content .post-title a:hover, .post-content-with-image .post-title a:hover {
        color: #f00; }
  .post-content .post-header, .post-content-with-image .post-header {
    text-align: center;
    text-transform: uppercase;
    margin-bottom: 1.6em;
    padding-top: 1.6em; }
  .post-content .entry-content figure.leftedge > img, .post-content-with-image .entry-content figure.leftedge > img {
    float: left;
    width: 30%;
    margin-left: -20%; }
  .post-content .entry-content figure.rightedge > img, .post-content-with-image .entry-content figure.rightedge > img {
    float: right;
    width: 30%;
    margin-right: -20%; }
  .post-content .entry-content figure.fullwidth, .post-content-with-image .entry-content figure.fullwidth {
    width: 100vw;
    line-height: 0;
    position: relative;
    left: calc(-50vw + 50%);
    margin: 1.6em auto 1.6em;
    text-align: center; }
    .post-content .entry-content figure.fullwidth img, .post-content-with-image .entry-content figure.fullwidth img {
      margin: 0px auto;
      max-width: 1400px;
      width: 100%; }
  .post-content .entry-content figcaption, .post-content-with-image .entry-content figcaption {
